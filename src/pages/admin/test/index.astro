---
import Layout from "@/src/core/Layout.astro";
import { DropzoneComponent } from "@/src/pages/admin/_components/Dropzone";
---

<Layout>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-2xl mb-4">Subir Archivos</h1>
    <form
      action="/admin/test/upload"
      method="post"
      enctype="multipart/form-data"
      class="space-y-4"
    >
      <div class="flex flex-col gap-2">
        <DropzoneComponent client:load />
      </div>
      <button
        type="submit"
        class="px-4 py-2 bg-gray-800 text-white rounded-md hover:bg-gray-700 transition-colors"
      >
        Subir Archivos
      </button>
    </form>
  </main>
</Layout>
